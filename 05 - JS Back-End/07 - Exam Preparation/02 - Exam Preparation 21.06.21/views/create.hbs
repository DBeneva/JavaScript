<form class="theater-form" action="/plays/create" method="POST">
    <h1>Create Theater</h1>
    <div>
        <label for="title">Theater Title:</label>
        <input type="text" id="title" name="title" placeholder="Theater name" value="{{playData.title}}">
    </div>
    <div>
        <label for="description">Theater Description:</label>
        <textarea id="dexcription" name="description" placeholder="Description">{{playData.description}}</textarea>
    </div>
    <div>
        <label for="imageUrl">Image url:</label>
        <input type="text" id="imageUrl" name="imageUrl" placeholder="Image Url" value="{{playData.imageUrl}}">
    </div>
    <div class="check">
        <input type="checkbox" id="check-box" name="isPublic" {{#if playData.isPublic}}checked{{/if}}>
        <label for="check-box">Public</label>
    </div>
    <button class="btn" type="submit">Submit</button>
</form>