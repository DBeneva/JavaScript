<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form" action="/games/search" method="GET">
            <input type="text" class="search-game" name="search" placeholder="Search here..." value="{{search}}">
            <select id="platform" name="platform">
                <option value="">-------</option>
                <option {{#if platform.PC}}selected{{/if}} value="PC">PC</option>
                <option {{#if platform.Nintendo}}selected{{/if}} value="Nintendo">Nintendo</option>
                <option {{#if platform.PS4}}selected{{/if}} value="PS4">PS4</option>
                <option {{#if platform.PS5}}selected{{/if}} value="PS5">PS5</option>
                <option {{#if platform.XBOX}}selected{{/if}} value="XBOX">XBOX</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        <div class="search-result">
            <div class="search-list">
                {{#if games}}
                {{#each games}}
                {{> game}}
                {{/each}}
                {{else}}
                <div class="no-match">
                    <p>No match was found!</p>
                </div>
                {{/if}}
            </div>
        </div>
    </section>
</main>