<main id="create">
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    <div>
        <div class="errorContainer">
            {{#if errors}}
            {{#each errors}}
            <p>{{this}}</p>
            {{/each}}
            {{/if}}
        </div>
    </div>

    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Game Code Offer</h1>
            <h4>Post your code to sell</h4>
            <form action="/games/create" method="POST">
                <label>Platform:</label>
                <select id="platform" name="platform">
                    <option value="">-------</option>
                    <option {{#if gameData.PC}}selected{{/if}} value="PC">PC</option>
                    <option {{#if gameData.Nintendo}}selected{{/if}} value="Nintendo">Nintendo</option>
                    <option {{#if gameData.PS4}}selected{{/if}} value="PS4">PS4</option>
                    <option {{#if gameData.PS5}}selected{{/if}} value="PS5">PS5</option>
                    <option {{#if gameData.XBOX}}selected{{/if}} value="XBOX">XBOX</option>
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{gameData.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" placeholder="http://..." value="{{gameData.image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{gameData.price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{gameData.genre}}">
                <label>Description:</label>
                <textarea id="description" name="description">{{gameData.description}}</textarea>

                <input type="submit" id="btn" value="CREATE"></input>
            </form>
        </div>
    </section>
</main>