<div class="card mb-4">
    <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap" width="400">
    {{#if user}}
    <div class="card-body">
        <h4 class="card-title">{{title}}</h4>
    </div>
    <div class="card-footer">
        <a href="/courses/details/{{_id}}"><button type="button" class="btn btn-primary">Details</button></a>
        <small class="float-right">{{createdAt}}</small>
    </div>
    {{else}}
    <div class="card-body">
        <h4 class="card-title">{{title}}</h4>
        <small class="float-right">Enrolled: {{users.length}}</small>
    </div>
    {{/if}}
</div>