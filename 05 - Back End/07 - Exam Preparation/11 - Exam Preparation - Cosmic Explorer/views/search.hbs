<div class="search-form-container">
    <form id="searchForm" class="search-form">
        <label for="name">Planet Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter planet name" value="{{name}}">

        <label for="solarSystem">Solar System:</label>
        <input type="text" id="solarSystem" name="solarSystem" placeholder="Enter solar system" value="{{solarSystem}}">

        <button type="submit">Search</button>
    </form>
</div>

<div id="searchResults" class="search-results hidden">
    <h2>Matching Planets:</h2>
    <!-- Sample result - dynamically generated -->
    {{#if planets}}
    {{#each planets}}
    {{> searchResult}}
    {{/each}}
