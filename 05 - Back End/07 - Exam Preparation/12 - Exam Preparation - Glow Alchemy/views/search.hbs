<section class="search-container">
    <h2>Search Products</h2>
    <form action="#">
        <input type="text" id="search" name="search" placeholder="Search for products..."  value="{{search}}">
        <button type="submit">Search</button>
    </form>
    <div class="search-results">
        {{#if cosmetics}}
        {{#each cosmetics}}
        {{> cosmetic}}
        {{/each}}
        {{else}}
        <p class="no-match">There are no products found yet!</p>
        {{/if}}
    </div>
</section>