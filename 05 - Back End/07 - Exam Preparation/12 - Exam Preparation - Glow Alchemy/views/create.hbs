<section class="form-container">
    <h2>Create Product Card</h2>
    <form action="/cosmetics/add" method="POST">
        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name" value="{{cosmeticData.name}}">

        <label for="skin">Skin Type:</label>
        <textarea id="skin" name="skin">{{cosmeticData.skin}}</textarea>

        <label for="description">Product Description:</label>
        <textarea id="description" name="description">{{cosmeticData.description}}</textarea>

        <label for="ingredients">Key Ingredients:</label>
        <textarea id="ingredients" name="ingredients">{{cosmeticData.ingredients}}</textarea>

        <label for="benefits">Benefits:</label>
        <textarea id="benefits" name="benefits">{{cosmeticData.benefits}}</textarea>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="{{cosmeticData.price}}">

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" value="{{cosmeticData.mage}}">

        <button type="submit">Create Product Card</button>
    </form>
</section>