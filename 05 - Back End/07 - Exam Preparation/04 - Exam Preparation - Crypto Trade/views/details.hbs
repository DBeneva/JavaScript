<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{offer.imageUrl}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{offer.name}}</h1>
            <h3 id="payment">Payment method: {{offer.payment}}</h3>
            <p id="price"><span>Price: ${{offer.price}}</span></p>
            <p id="description">{{offer.description}}</p>
        </div>
        {{#if user}}
        <div class="product-btn">
            {{#if offer.isOwner}}
            <div class="author">
                <a href="/offers/edit/{{offer._id}}" class="btn-edit">Edit</a>
                <a href="/offers/delete/{{offer._id}}" class="btn-delete">Delete</a>
            </div>
            {{else if offer.hasBought}}
            <p class="buy-message">You already bought these crypto coins.</p>
            {{else}}
            <a href="/offers/buy/{{offer._id}}" class="btn-buy">Buy</a>
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>