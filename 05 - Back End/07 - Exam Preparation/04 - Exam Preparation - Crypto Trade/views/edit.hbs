<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form action="/offers/edit/{{offerData._id}}" method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{offerData.name}}">
            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" value="{{offerData.imageUrl}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{offerData.price}}" step="0.01">
            <label>Description:</label>
            <textarea name="description"
                id="description">{{offerData.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="payment">
                <option value="crypto-wallet" {{#if offerData.cryptoWallet}}selected{{/if}}>Crypto Wallet</option>
                <option value="credit-card" {{#if offerData.creditCard}}selected{{/if}}>Credit Card</option>
                <option value="debit-card" {{#if offerData.debitCard}}selected{{/if}}>Debit Card</option>
                <option value="paypal" {{#if offerData.paypal}}selected{{/if}}>PayPal</option>
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>