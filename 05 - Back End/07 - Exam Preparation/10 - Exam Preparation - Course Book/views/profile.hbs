<section id="user">
    <div class="user-info">
        <div class="user-logo">
            <img src="https://ps.w.org/user-avatar-reloaded/assets/icon-256x256.png?rev=2540745">
        </div>
        <h1 class="user-email">{{user.email}}</h1>
        <h2 class="created-course-count">Total Created Course: {{user.courses.length}}</h2>
        <h2 class="sign-course-count">Total Sign up Course: {{user.signedUpFor.length}}</h2>
    </div>
</section>
<section class="profile-course">
    <div class="created-course">
        <h2 class="section-title">Created Course</h2>
        {{#if user.courses.length}}
            {{#each user.courses}}
                {{> profileCreatedCourse}}
            {{/each}}
        {{else}}
            <!-- If there are no created course -->
            <h2 class="no-course-in-profile">You haven't create a course yet...</h2>
        {{/if}}
    </div>

    <div class="sign-course">
        <h2 class="section-title">Sign Up Course</h2>
        {{#if user.signedUpFor.length}}
            {{#each user.signedUpFor}}
                {{> profileSignedUpCourse}}
            {{/each}}
        {{else}}
            <!-- If there are no followed course -->
            <h2 class="no-course-in-profile">You have no sign up course yetâ€¦</h2>
        {{/if}}
    </div>

</section>