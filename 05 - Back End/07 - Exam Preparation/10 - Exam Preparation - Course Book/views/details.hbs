<div class="details-container">
    <div class="details-container-image">
        <img
            src="{{course.image}}">
    </div>
    <div class="details-container-info">
        <h2>Title: {{course.title}}</h2>
        <h3>Type: {{course.type}}</h3>
        <h3>Certificate: {{course.certificate}}</h3>
        <h3>Price: â‚¬{{course.price}}</h3>
        <h3>By: {{course.owner.email}}</h3>
        <!--If there are sign up users-->
        {{#if course.signUpList}}
        <h4>Signing By: {{course.signedUpUsernames}}</h4>
        {{else}}
        <!--If there are no sign up users-->
        <h4>There are no people yet!</h4>
        {{/if}}
    </div>
    <div class="details-container-content">
        <p>{{course.description}}</p>
    </div>
    <div class="btn-container">
        <!-- Only for registered user and creator of the course-->
        {{#if course.isOwner}}
            <a href="/courses/edit/{{course._id}}">Edit</a>
            <a href="/courses/delete/{{course._id}}">Delete</a>
        {{else if course.hasSignedUp}}
            <!-- logged in user who has already sign up for the course-->
            <p class="sign-up">You already signed up for this course!</p>
        {{else if course.isUser}}
            <!-- logged in user who has not yet sign up for the course-->
            <a href="/courses/sign-up/{{course._id}}">Sign up</a>
        {{/if}}
    </div>
</div>