<section id="detailsPage">
    <div id="detailsInfo">
        <h1>Name: {{name}}</h1>
        <div class="info"><img src="{{image}}"></div>

        <div class="info">
            <h3>Type: {{type}}</h3>
            <h3>Year of Production: {{production}}</h3>
            <h3>Years of Exploitation: {{exploitation}}</h3>
            <h3>Damages: {{damages}}</h3>
            <h3>Description: {{description}}</h3>
            <h2>Price: ${{price}}</h2>
        </div>

        <!--If there is user logged in-->
        <div class="buttons">

            <!--If user is owner-->
            {{#if isOwner}}
            <a href="/offers/edit/{{_id}}" class="edit-btn">Edit</a>
            <a href="/offers/delete/{{_id}}" class="delete-btn">Delete</a>

            {{else if hasBeenBought}}
            <!--If user is not the owner and is bought this toy-->
            <p><span class="buy">Thank You For Your Purchase</span></p>

            {{else if isUser}}
            <!--If user is not owner of the toy post-->
            <a href="/offers/buy/{{_id}}" class="buy-btn">Buy</a>
            {{/if}}
        </div>
    </div>
</section>