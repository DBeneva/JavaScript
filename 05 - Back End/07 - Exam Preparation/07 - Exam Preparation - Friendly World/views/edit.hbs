<main class="create">
    <!-- Create Page (Only for logged-in users) -->
    <section id="create">
        <div class="form">
            <h2>Edit item</h2>
            <form class="create-form" method="post" action="/animals/edit/{{animalData._id}}">
                <input type="text" name="name" id="name" placeholder="Name" value="{{animalData.name}}" />
                <input type="number" name="years" id="years" placeholder="Years" value="{{animalData.years}}" />
                <input type="text" name="kind" id="kind" placeholder="Kind" value="{{animalData.kind}}" />
                <input type="text" name="image" id="animal-img" placeholder="Image url" value="{{animalData.image}}" />
                <input type="text" name="need" id="needs-of" placeholder="Needs of" value="{{animalData.need}}" />
                <input type="text" name="location" id="location" placeholder="Location" value="{{animalData.location}}" />
                <textarea id="description" placeholder="Description..." name="description">{{animalData.description}}</textarea>

                <button type="submit">Save</button>
            </form>
        </div>
    </section>
</main>