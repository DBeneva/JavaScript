<form class="form-horizontal" action="/edit/{{name}}" method="POST">
  <fieldset>
    <legend>Edit Contact</legend>
    <div class="form-group">
      <label for="name" class="col-lg-2 control-label">Name</label>
      <div class="col-lg-10">
        <input type="text" autofocus="autofocus" name="name" title="Name" class="form-control" id="name" value="{{name}}"/>
      </div>
    </div>
    <div class="form-group">
      <label for="number" class="col-lg-2 control-label">Number</label>
      <div class="col-lg-10">
        <input type="text" autofocus="autofocus" name="number" title="Number" class="form-control" id="number" value="{{number}}"/>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </div>
  </fieldset>
</form>